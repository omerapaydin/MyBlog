@model List<Post>
  <div class="row">
    <div class="col-lg-8">
      <div class="bg-white p-4">
        <h1 class="h4 mb-4">Populer Post</h1>
        @foreach(var post in Model) {
        <div class="card bg-transparent border-0 mb-3">
          <div class="row">
            <div class="col-4">
              <img src="~/img/@post.Image" class="img-fluid rounded" alt="" />
            </div>
            <div class="col-8">
              <h5>
                <a href="/posts/@post.Url" class="btn-link fw-bold"
                  >@post.Title</a
                >
              </h5>
              <p>@post.Description</p>
              <a
                href="#"
                class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold"
                >Web Development</a
              >
            </div>
          </div>
        </div>
        <hr class="my-3" />
        }
        <ul class="pagination">
          <li class="page-item d-flex">
            <a href="#" class="page-link">1</a>
            <a href="#" class="page-link">2</a>
            <a href="#" class="page-link">3</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="col-lg-4">
      <vc:users-menu></vc:users-menu>
    </div>
  </div>
</Post>
